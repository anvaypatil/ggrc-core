<div class="comment-object-item">
    <div class="comment-object-item__author">
      {{#if commentAuthor}}
        <person-list-item {person}="commentAuthor"></person-list-item>
      {{/if}}
      <span class="comment-object-item__author_info">{{assignee_types commentAuthorType}} added a response - {{localize_date commentCreationDate}}</span>
    </div>
  {{#if hasRevision}}
      <h6 class="comment-list__ca-description">{{customAttributeData}}</h6>
  {{/if}}
    <div class="comment-object-item__text">
     <read-more {text}="commentText"></read-more>
    </div>
</div>
